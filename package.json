{
  "name": "scrutin-workspace",
  "workspaces": {
    "packages": [
      "scrutin-app",
      "scrutin-server",
      "scrutin-common"
    ]
  },
  "scripts": {
    "re:start:watchexec": "watchexec --project-origin . -c -w app/src -w server/src -w common/src -i lib -e res,resi 'rescript build -with-deps'",
    "re:start:app": "cd app && npm run re:start",
    "re:start:common": "cd app && npm run re:start",
    "re:start:server": "cd server && npm run re:start"
  },
  "devDependencies": {
    "rescript": "^10.1.2"
  },
  "dependencies": {
    "rescript-json-combinators": "git+https://github.com/scrutin-app/rescript-json-combinators.git",
    "scrutin-app": "file:app",
    "scrutin-server": "file:server",
    "scrutin-common": "file:common"
  }
}
